<% @user ||= current_user %>
<div class="stats text-center">
  <a href="<%= following_user_path(@user.username) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a> | 
  <a href="<%= followers_user_path(@user.username) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>