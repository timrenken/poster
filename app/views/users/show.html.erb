<div class='container'>
  <div class='row'>
    <div class='col-md-4'>
      <%= render 'users/user' %>
    </div>
    <div class='col-md-8'>
      <%= render 'follow_form' if user_signed_in? %>
      <% if @user.posts.any? %>
        <h3>Posts (<%= @user.posts.count %>)</h3>
        <ol class='posts'>
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
      <% end %>
    </div>
  </div>
</div>