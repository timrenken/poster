<div class='container-fluid'>
<h1 class='text-center'>All Users</h1><br>
  <% @user.each do |user| %>
    <div class='col-lg-2 col-md-3 col-sm-4 clearfix text-center'>
      <div class='row'>
        <%= gravatar_tag user.email, size: 150 %>
        <div class='caption'>
          <h4><%= user.name %><br>
          <small>@<%= link_to user.username, user_path(user.username) %></small></h4>
        </div>
      </div>
    </div>
  <% end %>
</div>