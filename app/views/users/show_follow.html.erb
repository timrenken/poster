<% provide(:title, @title) %>
<div class='container'>
<div class="row">
  <aside class="col-md-4">
    <div class='thumbnail'>
        <%= render 'shared/user' %>
        <%= render 'shared/stats' %>
      </div>
    <section class="stats">
      
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_tag(user, size: 30), user_path(user.username) %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
  </div>