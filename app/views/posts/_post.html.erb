<div class='row'>
  <li id="post-<%= post.id %>">
  <div class='col-md-2'>
  <%= link_to gravatar_tag(post.user, size: 50), post.user.username %>
  </div>
  <div class='col-md-10'>
  <span class="user"><%= link_to post.user.username, post.user.username %></span>
  <span class="content"><%= post.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
    <% if current_user %>
      <%= link_to "delete", post, method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </span>
  </div>
</li>
</div>